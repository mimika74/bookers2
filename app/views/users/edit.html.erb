<center>
<h2>User info</h2>

<%= form_with model: @user, local:true do |f| %>
 <div> <label for ="inputName">Name</label>
  <%= f.text_field:name, autofocus:true, id:"inputName",placeholder:"Name" %></div>

 <div><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "ファイルを選択" %></div>
  <div>Introduction</div>
 <div> <%= f.text_area:Introduction, autofocus:true, id:"inputIntroduction", placeholder:"Introduction" %></div>

 <div> <%= f.submit "Update profile" %></div>
<% end %>

</center>