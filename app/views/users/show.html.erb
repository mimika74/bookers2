


<body>

      <main>


    <% flash.each do |message_type, message| %>
     <%= content_tag :div, message, class: message_type %>
     <% end %>

  <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th><%=@user.name %></th>
  </tr>
  <tr>
	  <th>Introduction</th>
	  <th><%= @user.introduction_id %></th>
  </tr>
</tbody></table>

<div class="row">

  <%=link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
</div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
      <h6>Title</h6>
      <%= f.text_field :title %>

      <h6>Opinion</h6>
      <%= f.text_area :opinion %>
      <%= f.submit 'Create Book', class: 'btn btn-success' %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>

        <% @books.each do |book| %>
         <td> <a href=user_path(current_user.id)>
          <%=attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %><br>
          <%= @user.name %></a></td>

          <td><%= book.title %></td>
          <td><%=book.opinion %></td>
          <td><a class="btn btn-sm btn-success edit_book_id" href="/books/:id/edit">Edit</a></td>
          <td><a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger destroy_book_id" rel="nofollow" data-method="delete" href="/books/:id">Destroy</a></td>
          <% end %>

        </tr>
  </tbody>
</table>
    </div>
  </div>
</div>
      </main>
