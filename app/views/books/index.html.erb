
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<main>

    <% flash.each do |message_type, message| %>
             <%= content_tag :div, message, class: message_type %>
             <% end %>

        <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

   <table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th><%=@user %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%=@user %></th>
  </tr>
</tbody></table>


<div class="row">
  <%=link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>

</div>


      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
      <h6>Title</h6>
      <%= f.text_field :title %>

      <h6>Opinion</h6>
      <%= f.text_area :opinion %>
      <%= f.submit 'Create Book', class: 'btn btn-success' %>
      <% end %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>

            <td>

            <%=link_to user_path(book.id) do %>
            <%=attachment_image_tag @book, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %><br>
            <% end %>

            </td>
            <td><%=link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %></td>

          <td><%= book.opinion %></td>
      </tr>
    <% end %>

  </tbody>
</table>
    </div>
  </div>
</div>
      </main>
    <footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>








